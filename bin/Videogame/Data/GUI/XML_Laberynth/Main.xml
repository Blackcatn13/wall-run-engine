<?xml version="1.0" encoding="ISO-8859-1"?>
<Windows OnLoadWindows="gui_manager:set_is_displayed_console(true);
                         CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('Menu','Music');"
         OnSaveWindows=""
         OnUpdateWindows="">
	
	<Image name="background" posx="0.00" posy="0.00" height="100.00" width="100.00" visible="true" active="true"
		default="img1" OnLoadValue="" OnSaveValue="" flip="" backGround="false">
		<texture name="img1" name_texture="./Data/GUI/GoPixelGo/MenuMain2.jpg"/>
	</Image>
	
     <ButtonList name="ButtonList" posx="60.00" posy="5.0" height="90.0" width="22.0" visible="true" active="true">
          <Buttons>
          	<Button name="Play" posx="60.00" posy="10.00" height="15.00" width="22.00" visible="true" 
                    active="true" texture_normal="./Data/GUI/GoPixelGo/PlayButton.png"
                    texture_over="./Data/GUI/GoPixelGo/PlayButtonHover.png"
                    texture_clicked="./Data/GUI/GoPixelGo/PlayButton.png"
                    texture_deactivated="./Data/GUI/GoPixelGo/PlayButton.png"
                    OnClickedAction="CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuClick','Music');
          							CCoreLuaWrapper().m_CoreInstance:getGUIManager():push_windows('Play.xml');
          							if player.game_over == true then
          								 reset_cameras()
          								 player.game_over = false
          							end
                                        gui_manager:activate_pause(false);
                                        gui_manager:set_is_paused(false)"
                    OnOverAction="CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuOver','Music');"/>
          		  
          	<Button name="Options" posx="60.00" posy="30.00" height="15.00" width="22.00" visible="true" 
                    active="true" texture_normal="./Data/GUI/GoPixelGo/OptionsButton.png"
                    texture_over="./Data/GUI/GoPixelGo/OptionsButtonHover.png"
                    texture_clicked="./Data/GUI/GoPixelGo/OptionsButton.png"
                    texture_deactivated="./Data/GUI/GoPixelGo/OptionsButton.png"
                    OnClickedAction="CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuClick','Music');"
                    OnOverAction="CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuOver','Music');"/>
          		  
          	<Button name="Extras" posx="60.00" posy="50.00" height="15.00" width="22.00" visible="true" 
                    active="true" texture_normal="./Data/GUI/GoPixelGo/ExtrasButton.png"
                    texture_over="./Data/GUI/GoPixelGo/ExtrasButtonHover.png"
                    texture_clicked="./Data/GUI/GoPixelGo/ExtrasButton.png"
                    texture_deactivated="./Data/GUI/GoPixelGo/ExtrasButton.png"
                    OnClickedAction=" CCoreLuaWrapper().m_CoreInstance:getGUIManager():push_windows('Collectibles.xml')
          			CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuClick','Music');"
                    OnOverAction="CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuOver','Music');"/>
          		  
          	<Button name="Exit" posx="60.00" posy="70.00" height="15.00" width="22.00" visible="true" 
                    active="true" texture_normal="./Data/GUI/GoPixelGo/ExitButton.png"
                    texture_over="./Data/GUI/GoPixelGo/ExitButtonHover.png"
                    texture_clicked="./Data/GUI/GoPixelGo/ExitButton.png"
                    texture_deactivated="./Data/GUI/GoPixelGo/ExitButton.png"
                    OnClickedAction=" CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuClick','Music');
          							CCoreLuaWrapper().m_CoreInstance:exit_game()"
                    OnOverAction="CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuOver','Music');"/>
          </Buttons>
     </ButtonList>

</Windows>
