<?xml version="1.0" encoding="ISO-8859-1"?>
<Windows OnLoadWindows="if gui_manager:get_is_paused() == false then
							gui_manager:set_visible_mouse(false);
						end
						gui_manager:set_is_gameover(false);
						gui_manager:set_is_displayed_console(false);
						gui_manager:set_is_displayed_poly_message(false);
						gui_manager:set_is_displayed_unlock_message(false);
						gui_manager:set_visibility_message(false);
						CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuEnd','Music');
						CCoreLuaWrapper().m_CoreInstance:get_scene_render_commands_manager().currentRenderer = 'normal_render';"
         OnSaveWindows=""
         OnUpdateWindows="onUpdateWindowDisplayGUI()">
	
	<Image name="MessageGUI" posx="37.5" posy="37.50" height="20" width="24" visible="true" active="true"
         default="PolyPlatform" OnLoadValue="" OnSaveValue="" flip="" backGround="false">
    <texture name="PolyPlatform" name_texture="./Data/GUI/GoPixelGo/PolyPlatformMessage.png"/>
	<texture name="UnlockCard" name_texture="./Data/GUI/GoPixelGo/UnlockCardMessage.png"/>
  </Image>
  
  <Image name="LifeGUI" posx="2" posy="77.00" height="20" width="12" visible="true" active="true"
         default="Life3" OnLoadValue="" OnSaveValue="" flip="" backGround="false">
    <texture name="Life3" name_texture="./Data/GUI/GoPixelGo/Gui_Vida_3.png"/>
	<texture name="Life2" name_texture="./Data/GUI/GoPixelGo/Gui_Vida_2.png"/>
	<texture name="Life1" name_texture="./Data/GUI/GoPixelGo/Gui_Vida_1.png"/>
	<texture name="Life0" name_texture="./Data/GUI/GoPixelGo/Gui_Vida_0.png"/>
  </Image>
  
  <Image name="VidesGUI" posx="2" posy="44.00" height="16" width="9.5" visible="true" active="true"
         default="Vides" OnLoadValue="" OnSaveValue="" flip="" backGround="false">
    <texture name="Vides" name_texture="./Data/GUI/GoPixelGo/GUI_Life.png"/>
  </Image>
  
  <StaticText name="VidesNumberShadow" posx="11.25" posy="53.25" height="15" width="15" visible="true" active="true" Literal="x 3"/>
  <StaticText name="VidesNumber" posx="11" posy="53" height="15" width="15" visible="true" active="true" Literal="x 3"/>
  
  <Image name="PixeliteGUI" posx="2" posy="61.00" height="16" width="9.5" visible="true" active="true"
         default="Pixelite" OnLoadValue="" OnSaveValue="" flip="" backGround="false">
    <texture name="Pixelite" name_texture="./Data/GUI/GoPixelGo/GUI_Pixelites.png"/>
  </Image>
  
  <StaticText name="PixeliteNumberShadow" posx="11.25" posy="70.25" height="15" width="15" visible="true" active="true" Literal="x 0"/>
  <StaticText name="PixeliteNumber" posx="11" posy="70" height="15" width="15" visible="true" active="true" Literal="x 0"/>
	
	<Image name="backgroundPause" posx="0.00" posy="0.00" height="100.00" width="100.00" visible="false" active="true"
		default="img1" OnLoadValue="" OnSaveValue="" flip="" backGround="false">
		<texture name="img1" name_texture="./Data/GUI/GoPixelGo/PauseBackground.png"/>
	</Image>
	
	<Image name="pause" posx="40.00" posy="20.00" height="41.50" width="19.00" visible="false" active="true"
		default="img1" OnLoadValue="" OnSaveValue="" flip="" backGround="false">
		<texture name="img1" name_texture="./Data/GUI/GoPixelGo/Pause.png"/>
	</Image>
	
  <ButtonList name="PauseButtonList" posx="42" posy="20" height="60" width="15" visible="false" active="true">
    <Buttons>
    	<Button name="PlayPause" posx="42.00" posy="20.00" height="10.00" width="15.00" visible="true" 
              active="true" texture_normal="./Data/GUI/GoPixelGo/Button_1_A.png"
			  texture_over="./Data/GUI/GoPixelGo/Button_1_B.png"
			  texture_clicked="./Data/GUI/GoPixelGo/Button_1_C.png"
			  texture_deactivated="./Data/GUI/GoPixelGo/Button_1_A.png"
              OnClickedAction="CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuClick','Music');
    							gui_manager:activate_pause(false);
    							gui_manager:set_is_paused(false)"
              OnOverAction="CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuOver','Music');"/>
    		  
    	<Button name="OptionsPause" posx="42.00" posy="30.00" height="10.00" width="15.00" visible="true" 
              active="true" texture_normal="./Data/GUI/GoPixelGo/Button_2_A.png"
			  texture_over="./Data/GUI/GoPixelGo/Button_2_B.png"
			  texture_clicked="./Data/GUI/GoPixelGo/Button_2_C.png"
			  texture_deactivated="./Data/GUI/GoPixelGo/Button_2_A.png"
              OnClickedAction="CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuClick','Music');
			  CCoreLuaWrapper().m_CoreInstance:getGUIManager():push_windows('KeyButtonMap.xml')"
              OnOverAction="CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuOver','Music');"/>
    		  
    	<Button name="ExtrasPause" posx="42.00" posy="40.00" height="10.00" width="15.00" visible="true" 
              active="true" texture_normal="./Data/GUI/GoPixelGo/Button_3_A.png"
			  texture_over="./Data/GUI/GoPixelGo/Button_3_B.png"
			  texture_clicked="./Data/GUI/GoPixelGo/Button_3_C.png"
			  texture_deactivated="./Data/GUI/GoPixelGo/Button_3_A.png"
              OnClickedAction=" CCoreLuaWrapper().m_CoreInstance:getGUIManager():push_windows('Collectibles.xml')
    			CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuClick','Music');"
              OnOverAction="CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuOver','Music');"/>
    		  
    	<Button name="ExitPause" posx="42.00" posy="50.00" height="10.00" width="15.00" visible="true" 
              active="true" texture_normal="./Data/GUI/GoPixelGo/Button_4_A.png"
			  texture_over="./Data/GUI/GoPixelGo/Button_4_B.png"
			  texture_clicked="./Data/GUI/GoPixelGo/Button_4_C.png"
			  texture_deactivated="./Data/GUI/GoPixelGo/Button_4_A.png"
              OnClickedAction=" CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuClick','Music');
								reset_game();
								gui_manager:set_is_gameover(false);
								gui_manager:set_visible_mouse(true);
								CCoreLuaWrapper().m_CoreInstance:get_graphics_manager():set_is_GUI_displayed(true);
								CCoreLuaWrapper().m_CoreInstance:getGUIManager():pop_windows();"
              OnOverAction="CCoreLuaWrapper().m_CoreInstance:getWWSoundManager():PlayEvent('MenuOver','Music');"/>
    </Buttons>
  </ButtonList>
  
  <Image name="GameOverBackground" posx="0" posy="0" height="100" width="100" visible="false" active="true"
         default="background" OnLoadValue="" OnSaveValue="" flip="" backGround="false">
    <texture name="background" name_texture="./Data/GUI/GoPixelGo/GameOverBackgroundTrans2.png"/>
  </Image>
  
  <Image name="GameOver" posx="0" posy="0" height="100" width="100" visible="false" active="true"
         default="Gameover" OnLoadValue="" OnSaveValue="" flip="" backGround="false">
    <texture name="Gameover" name_texture="./Data/GUI/GoPixelGo/GAMEOVER.png"/>
  </Image>
</Windows>
